#OK Query one project with all datas according one specified Id
# ==> return a project object


query GetProjectByID($id: ID!) {
  project(id: $id) {
      id
      title
      description
      created_at
      expiration_date
      location
      lat
      long
      image
      archived
      isFollowed
      userIsAuthor
      author{
        id
        name
        email
      }
      needs{
        title
        description
      }
      comments{
        content
        author{
          name
          email
          created_at
        }
      }
      followers{
        id
        name
      }
      
  }
  
}
