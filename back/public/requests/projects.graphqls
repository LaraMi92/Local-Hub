#OK create new project
# AUTHENTICATION REQUIRED
# ==> return the created project object or an error object
mutation CreateProject(
        $title: String!,
        $description: String!,
        $expiration_date: String!,
        $location: String!,
        $lat: Float!,
        $long: Float!,
        $image: String,
        $file: String,
        $needs: [NeedInput]
) {
  insertProject(
        title: $title,
        description: $description,
        expiration_date: $expiration_date,
        location: $location,
        lat: $lat,
        long: $long,
        image: $image,
        file: $file,
        needs: $needs
  ) {
    __typename
    ... on Project{
      id
      title
      description
      expiration_date
      location
      lat
      long
      
    }
    ... on Error{
      error{
        msg
        code
      }
    }
  }
}
