#OK Archive Project with specified Id
# AUTHENTICATION REQUIRED via author profile
# ==> return the archived project object or an error object
mutation ArchiveProject(
        $id: ID!
) {
  archiveProject(
        id: $id
  ) {
    ... on Project{
      id
      title
      description
      expiration_date
      location
      lat
      long
      archived
      needs{
        id
        title
      }
      
    }
    ... on Error{
      error{
        msg
        code
      }
    }
  }
}
